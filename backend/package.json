{
  "name": "lagoon440-backend",
  "version": "1.0.0",
  "description": "Backend API for Lagoon 440 Sailing App",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "deploy": "az webapp up --name lagoon440-api --resource-group lagoon440-rg --runtime \"NODE:18-lts\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "twilio": "^4.19.0",
    "expo-server-sdk": "^3.7.0",
    "axios": "^1.6.2",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/xml2js": "^0.4.14",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0"
  }
}
